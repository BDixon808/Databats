<main>
    {{!-- DISPLAY TABLE WITH ALL DATA --}}
  <div id="browse">
    <table id="status_table">

      {{!-- DISPLAY COLUMN TITLES --}}
      <thead>
        <tr>
          <th width=60px><button class="modify" onClick="newRecord()">add</button></th>
          <th width=30px>id</th>
          <th width=83%>status name</th>
          <th width=80px></th>
        </tr>
      </thead>

      {{!-- DISPLAY ROWS --}}
      <tbody>
        {{#each status}}
        <tr>
          <td></td>
          <td class="id">{{this.idStatus}}</td>
          <td>{{this.name}}</td>
          <td><button class="modify cancel" onclick="deleteStatus({{this.idStatus}})">delete</button></td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

    {{!-- DISPLAY TABLE TO INSERT DATA --}}
  <div id="insert" style="display: none">
    <form id="add_status_form_ajax">
      <table class="insert_table">
          
          {{!-- DISPLAY COLUMN TITLES --}}
        <tr>
          <th>name</th>
        </tr>
          
          {{!-- DISPLAY ROWS --}}
        <tr>
          <td>
            <textarea name="name" id="input_name" placeholder="max. 30 characters" class="nameinput"></textarea>
          </td>
        </tr>
      </table>
      <div class="space"></div>
      <div class="actions">
        <button class="modify confirm" type="submit" id="addStatus">confirm</button>
        <button class="modify cancel" type="button" onClick="browseRecords()">cancel</button>
      </div>
    </form>
  </div>
</main>


